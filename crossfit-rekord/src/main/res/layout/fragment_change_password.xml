<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView48"
            style="@style/MainTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/strPasswordOld" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/editPasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView11"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint= "@color/colorRedPrimary"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorRedPrimary"
            android:theme="@style/Theme.App.Base">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/etPasswordOld"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:inputType="textPassword"
                android:maxLines="1"
                android:ems="10"
                android:textColor="@color/colorRedPrimary"
                android:theme="@style/Theme.App.Base" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/textView49"
            style="@style/MainTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/strPasswordNew" />

        <EditText
            android:id="@+id/etPasswordNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="@color/colorRedPrimary"
            android:theme="@style/Theme.App.Base"
            tools:ignore="LabelFor"
            android:autofillHints="@string/empty"
            tools:targetApi="o" />

        <TextView
            android:id="@+id/textView50"
            style="@style/MainTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/strPasswordRepeat" />

        <EditText
            android:id="@+id/etPasswordRepeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:ems="10"
            android:inputType="textPassword"
            android:textColor="@color/colorRedPrimary"
            android:theme="@style/Theme.App.Base"
            tools:ignore="LabelFor"
            android:autofillHints="@string/empty"
            tools:targetApi="o" />

        <ProgressBar
            android:id="@+id/pbChangePassword"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:visibility="invisible" />

        <Button
            android:id="@+id/btnChangePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:text="@string/btnPasswordSaveNew" />

    </LinearLayout>

</android.widget.RelativeLayout>