<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/captionTraining"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Статистика по тренировкам"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@color/colorRedPrimary"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/captionTraining"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/divider" />

    <RelativeLayout
        android:id="@+id/layoutNumberOfWorkouts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_below="@id/divider1">

        <TextView
            android:id="@+id/captionQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="количество посещений"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/colorRedPrimary"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:id="@+id/layoutQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/captionQuantity"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.48">
                <TextView
                    android:id="@+id/captionMonthlyTraining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="за месяц: "
                    android:textColor="@color/colorRedPrimary"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/textMonthlyTraining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textColor="@color/colorRedPrimary"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

            <View
                android:id="@+id/divider3"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.48">

                <TextView
                    android:id="@+id/captionPreviousMonthlyTraining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="за предыдущий месяц: "
                    android:textColor="@color/colorRedPrimary"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/textPreviousMonthlyTraining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textColor="@color/colorRedPrimary"
                    android:layout_gravity="center_horizontal" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/layoutQuantity">

            <TextView
                android:id="@+id/captionTrainingDynamics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="динамика: "
                android:textColor="@color/colorRedPrimary"

                android:layout_marginEnd="5dp"/>

            <TextView
                android:id="@+id/textTrainingDynamics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/colorRedPrimary"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutLevelsOfWorkouts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/layoutNumberOfWorkouts"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/textCaptionLevelsOfWorkouts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="по уровням за месяц"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/colorRedPrimary"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:id="@+id/layoutLevels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/textCaptionLevelsOfWorkouts"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.31">

                <TextView
                    android:id="@+id/captionSc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sc"
                    android:textColor="@color/colorRedPrimary"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/textSc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textColor="@color/colorRedPrimary"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

            <View
                android:id="@+id/divider4"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.31">

                <TextView
                    android:id="@+id/captionRx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/captionSc"
                    android:text="Rx"
                    android:textColor="@color/colorRedPrimary"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/textRx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/captionSc"
                    android:layout_toEndOf="@id/captionRx"
                    android:text="0"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textColor="@color/colorRedPrimary"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

            <View
                android:id="@+id/divider5"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/divider"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.31">

                <TextView
                    android:id="@+id/captionRxPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/captionRx"
                    android:text="Rx+"
                    android:textColor="@color/colorRedPrimary"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:id="@+id/textRxPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/captionRx"
                    android:layout_toEndOf="@id/captionRxPlus"
                    android:text="0"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textColor="@color/colorRedPrimary"
                    android:layout_gravity="center_horizontal"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/layoutLevelsOfWorkouts"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/divider" />

    <RelativeLayout
        android:id="@+id/layoutPreviousTraining"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/divider2">

        <TextView
            android:id="@+id/textCaptionPreviousTraining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Предыдущая тренировка"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@color/colorRedPrimary"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/captionLastDateSession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textCaptionPreviousTraining"
            android:text="Дата: "
            android:textColor="@color/colorRedPrimary"/>

        <TextView
            android:id="@+id/textLastDateSession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textCaptionPreviousTraining"
            android:layout_toEndOf="@id/captionLastDateSession"
            android:text="0"
            android:textColor="@color/colorRedPrimary"/>

        <TextView
            android:id="@+id/captionLastWodLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textLastDateSession"
            android:text="Уровень комплекса: "
            android:textColor="@color/colorRedPrimary"/>

        <TextView
            android:id="@+id/textLastWodLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/captionLastDateSession"
            android:layout_toEndOf="@id/captionLastWodLevel"
            android:text="0"
            android:textColor="@color/colorRedPrimary"/>

        <TextView
            android:id="@+id/captionLastWod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textLastWodLevel"
            android:text="Результат: "
            android:textColor="@color/colorRedPrimary"/>

        <TextView
            android:id="@+id/textLastWod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/captionLastWodLevel"
            android:layout_toEndOf="@id/captionLastWod"
            android:text="0"
            android:textColor="@color/colorRedPrimary"/>

        <Button
            android:id="@+id/buttonShowPreviousTraining"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/captionLastWod"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="15dp"
            android:text="Посмотреть её" />

    </RelativeLayout>

    <Button
        android:id="@+id/buttonOneRepeatHighs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="15dp"
        android:text="@string/oneRepeatHighs" />


</RelativeLayout>