<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardAboutMe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="15dp"
        android:layout_margin="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/textView14"
                style="@style/MainTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/strUserName" />

            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView14"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/empty"
                android:textColor="@color/colorWhite"
                android:theme="@style/Theme.App.Base"
                tools:ignore="LabelFor"
                android:autofillHints="@string/strUserName"
                tools:targetApi="o" />

            <TextView
                android:id="@+id/textView30"
                style="@style/MainTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editName"
                android:layout_marginTop="5dp"
                android:text="@string/strUserSurname" />

            <EditText
                android:id="@+id/editSurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView30"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/empty"
                android:textColor="@color/colorWhite"
                android:theme="@style/Theme.App.Base"
                tools:ignore="LabelFor"
                android:autofillHints="@string/strUserSurname"
                tools:targetApi="o" />

            <TextView
                android:id="@+id/textView32"
                style="@style/MainTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editSurname"
                android:layout_marginTop="5dp"
                android:text="@string/strPhone" />

            <EditText
                android:id="@+id/editPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView32"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:inputType="phone"
                android:text="@string/empty"
                android:textColor="@color/colorWhite"
                android:theme="@style/Theme.App.Base"
                tools:ignore="LabelFor"
                android:autofillHints="@string/strPhone"
                tools:targetApi="o" />

            <TextView
                android:id="@+id/textView33"
                style="@style/MainTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@id/editPhone"
                android:text="@string/strCardNumber"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textCardNumber"
                style="@style/MainTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@id/editPhone"
                android:layout_toEndOf="@id/textView33"
                android:text="@string/empty"
                android:textSize="14sp" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textCardNumber"
                tools:visibility="gone" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/buttonChangeUserData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardAboutMe"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:paddingStart="25dp"
        android:paddingLeft="25dp"
        android:paddingEnd="25dp"
        android:paddingRight="25dp"
        android:text="@string/strBtnChange" />

    <TextView
        android:id="@+id/textOpenChangeEmail"
        style="@style/MainTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonChangeUserData"
        android:layout_marginTop="30dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:gravity="center_horizontal"
        android:text="@string/strEmailChange" />

    <TextView
        android:id="@+id/textOpenChangePas"
        style="@style/MainTextStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textOpenChangeEmail"
        android:layout_marginTop="30dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:gravity="center_horizontal"
        android:text="@string/strPasswordChange" />

</android.widget.RelativeLayout>