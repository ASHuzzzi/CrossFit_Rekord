<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    tools:context=".ui.fragments.RegistryFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/cardRegistry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="15dp"
        android:layout_margin="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/strUserNameR"
                android:textColor="@color/colorWhite" />

            <EditText
                android:id="@+id/editTextUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:autofillHints="@string/empty"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="@color/colorWhite"
                android:theme="@style/Theme.App.Base"
                tools:ignore="LabelFor"
                tools:targetApi="o" />

            <TextView
                android:id="@+id/textView30"
                style="@style/MainTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextUserName"
                android:layout_marginTop="5dp"
                android:text="@string/strUserSurname" />

            <EditText
                android:id="@+id/ediTextUserSurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView30"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/empty"
                android:textColor="@color/colorWhite"
                android:theme="@style/Theme.App.Base"
                tools:ignore="LabelFor"
                android:autofillHints="@string/strUserSurname"
                tools:targetApi="o" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ediTextUserSurname"
                android:gravity="start"
                android:text="@string/email"
                android:textColor="@color/colorWhite" />

            <EditText
                android:id="@+id/editTextUserEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView2"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:autofillHints="@string/empty"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:textColor="@color/colorWhite"
                android:theme="@style/Theme.App.Base"
                tools:ignore="LabelFor"
                tools:targetApi="o" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/editTextUserEmail"
                android:gravity="start"
                android:text="@string/password"
                android:textColor="@color/colorWhite" />

            <EditText
                android:id="@+id/EditTextUserPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView3"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:autofillHints="@string/empty"
                android:ems="10"
                android:inputType="textVisiblePassword"
                android:textColor="@color/colorWhite"
                android:theme="@style/Theme.App.Base"
                tools:ignore="LabelFor"
                tools:targetApi="o" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/EditTextUserPassword"
                android:gravity="start"
                android:text="@string/passwordRep"
                android:textColor="@color/colorWhite" />

            <EditText
                android:id="@+id/editTextUserPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView45"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:autofillHints="@string/empty"
                android:ems="10"
                android:inputType="textVisiblePassword"
                android:textColor="@color/colorWhite"
                android:theme="@style/Theme.App.Base"
                tools:ignore="LabelFor"
                tools:targetApi="o" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardRegistry"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonRegisterNewUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressbar"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:paddingStart="30dp"
        android:paddingLeft="30dp"
        android:paddingEnd="30dp"
        android:paddingRight="30dp"
        android:text="@string/btnRegistered" />

</RelativeLayout>
