<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp">

    <LinearLayout
        android:id="@+id/Layout_Button_Day_of_Week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/day_1"
            style="@style/TableStyleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="@string/day_1"
            android:textColor="@drawable/button_text_color" />

        <Button
            android:id="@+id/day_2"
            style="@style/TableStyleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="@string/day_2"
            android:textColor="@drawable/button_text_color" />

        <Button
            android:id="@+id/day_3"
            style="@style/TableStyleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="@string/day_3"
            android:textColor="@drawable/button_text_color" />

        <Button
            android:id="@+id/day_4"
            style="@style/TableStyleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="@string/day_4"
            android:textColor="@drawable/button_text_color" />

        <Button
            android:id="@+id/day_5"
            style="@style/TableStyleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="@string/day_5"
            android:textColor="@drawable/button_text_color" />

        <Button
            android:id="@+id/day_6"
            style="@style/TableStyleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="@string/day_6"
            android:textColor="@drawable/button_text_color" />

        <Button
            android:id="@+id/day_7"
            style="@style/TableStyleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:text="@string/day_7"
            android:textColor="@drawable/button_text_color" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lvTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Layout_Button_Day_of_Week"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:id="@+id/Layout_Error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="false"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="@string/error_connection1"
            android:textColor="@color/colorRedPrimary" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="@string/error_connection2"
            android:textColor="@color/colorRedPrimary" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:text="@string/error_connection_button"
            android:textColor="@color/colorRedPrimary" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="false"
        tools:layout_editor_absoluteY="8dp" />

</android.widget.RelativeLayout>