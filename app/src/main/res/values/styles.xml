<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/RekordTheneButton</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="LayoutStand" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_marginEnd" tools:ignore="NewApi">@dimen/layout_marginStart</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">@dimen/layout_marginStart</item>
        <item name="android:layout_marginTop">@dimen/layout_marginTop</item>
    </style>

    <style name="RekordTheneButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/startscreen_button</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="TableButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/table_button</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>


</resources>
