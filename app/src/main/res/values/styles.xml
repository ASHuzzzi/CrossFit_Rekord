<resources>

    <!-- Основная тема приложения -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/MainStyleButton</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Стили для Nav bar -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- Стиль кнопок приложения -->
    <style name="MainStyleButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:background">@drawable/startscreen_button</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="MainTextStyle">
        <item name="android:textColor">@color/colorRedPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Стиль кнопок для экрана с расписанием тренировок -->
    <style name="TableButtonStyle" parent="MainStyleButton">
        <item name="android:background">@drawable/table_button</item>
        <item name="android:textColor">@drawable/button_text_color</item>
    </style>

    <!-- Блок отсутствия сети-->
    <!-- Стиль кнопки-->
    <style name="ErrorButtonStyle" parent="MainStyleButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:text">@string/error_connection_button</item>
        <item name="android:textColor">@color/colorRedPrimary</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="SelectTrainingButtonStyle" parent="AppTheme">
        <item name="android:background">@drawable/button_select_training</item>
        <item name="android:textColor">@drawable/button_text_color</item>
    </style>

    <!-- Стиль текста-->
    <style name="ErrorTextStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorRedPrimary</item>
    </style>

    <!-- Стиль календаря -->
    <!-- Стиль кнопок для экрана с расписанием тренировок -->
    <style name="CalendarStyle" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/calendar_day</item>
    </style>

    <style name="calendarHeaderStyle" parent="AppTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/colorRedPrimary</item>
    </style>

    <style name="calendarweekDayStyle" parent="AppTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/colorRedPrimary</item>
    </style>

    <style name="calendarSelectDayStyle" parent="AppTheme">
        <item name="android:background">@color/colorRedPrimary</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Theme.App.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/colorRedDark</item>
        <item name="colorControlActivated">@color/colorRedDark</item>
        <item name="colorControlHighlight">@color/colorRedDark</item>
    </style>


</resources>